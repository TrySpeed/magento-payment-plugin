<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_success">
        <observer name="speed_set_new_order_status" instance="Tryspeed\BitcoinPayment\Observer\NewOrderStatusObserver" />
    </event>
    <event name="payment_method_assign_data">
        <observer name="speed_payment_gateway_data_assign" instance="Tryspeed\BitcoinPayment\Observer\DataAssignObserver" />
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="suppress_speed_order_email" instance="Tryspeed\BitcoinPayment\Observer\SuppressEmail" />
    </event>
</config>
